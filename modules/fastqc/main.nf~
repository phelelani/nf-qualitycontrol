#!/usr/bin/env nextflow
nextflow.enable.dsl=2

// =====================================================================================================
// PROCESSES
process run_fastqc {
    label 'fastqc'
    tag { sample_id }
    
    input:
    tuple val(sample_id), path(reads)
    
    output:
    path("*.{html,zip}"), emit: fastqc_report
    
    """
    fastqc ${reads.findAll().join(' ') } --threads ${task.cpus} --noextract
    """
}

// =====================================================================================================
// END
